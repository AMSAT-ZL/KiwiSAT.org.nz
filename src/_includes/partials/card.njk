{% macro card(href="#", src="", alt="", width="", height="", text="") %}
<div class="w-108 mb-4 bg-white overflow-hidden">
  <div class="md:flex">
    <div class="flex-none w-48">
      {% if src %}
      <img class="p-0 object-none object-center" src="/img/{{src}}" alt="{{ alt }}"
        {% if width %}
          width="{{ width }}"
        {% endif %}
        {% if height %}
          height="{{ height}}"
        {% endif %}
      >
      {% else %}
      &nbsp;
      {% endif %}
    </div>
    <div class="p-2">
      <a href="{{ href }}" target="_blank" class="block mt-1 text-lg leading-tight font-medium text-black hover:underline">{{ text }}</a>
    </div>
  </div>
</div>
{% endmacro %}